<html>
    <head>
        <title>dashdb is coming</title>
        <link rel="stylesheet" type="text/css" href="/styles/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="/styles/bootstrap-theme.min.css">
    </head>
    <body>
        <div class="text-center">
            <h3>{{ .title }}</h3>
        </div>
        <div class="container">
            <div class="col-md-3">
                <ul class="nav nav-pills nav-stacked">
                    {{range .tables}}
                    <li><a href="/tabledata?name={{.}}">{{.}}</a>
                    {{end}}
                </ul>
            </div>
            <div class="col-md-9">
                <h4>Add new data</h4>
                <br/>
                <table class="table">
                    <tbody>
                        {{range .cols}}
                        <tr>
                            {{if .Ai}}
                                <td>{{.Name}} (auto increment)</td>
                                <td>                            
                                    <input type="text" disabled/>
                                </td>
                            {{else}}
                                <td>{{.Name}}</td>
                                <td>                            
                                    <input type="text"/>
                                </td>
                            {{end}}                            
                        </tr>
                        {{end}}
                        <tr><td><button class="btn btn-default">Save</button></td><td></td></tr>
                    </tbody>
                </table>
            </div>
        </div>
        <script type="text/javascript" src="/scripts/vue.js"></script>
    </body>
</html>